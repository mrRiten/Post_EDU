<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Post_EDU</title>
    <!--
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/Post_EDU.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    -->
    
    <link rel="stylesheet" href="~/css/index.min.css" asp-append-version="true"/>
    
</head>
<body>
    <header class="header">
        <div class="container">
            <nav class="nav">
                <ul class="menu">
                    <li class="item">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="item">
                        <a asp-controller="Post" asp-action="Index">Posts</a>
                    </li>
                    <li class="item">
                        <a href="">Categories</a>
                    </li>
                    <li class="item">
                        <a asp-controller="User" asp-action="Index">Profile</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Post_EDU - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
